<resources>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme"
            parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

<!--    Стандартный шрифт PT Sans-->
        <item name="android:fontFamily">@font/ptsans</item>
        <item name="fontFamily">@font/ptsans</item>

    </style>

    <style name="ThemeOverlay.AppCompat.ActionBar.MyToolbar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="EdTextSchedule">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="AppTheme.TextViewSubjectName">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextViewSubjectNumber">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>
